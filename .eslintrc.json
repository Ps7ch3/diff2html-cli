{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "commonjs": true,
    "jquery": true,
    "phantomjs": true,
    "jasmine": true,
    "mocha": true,
    "amd": true,
    "worker": true,
    "qunit": true
  },
  "plugins": ["standard", "node", "import", "promise", "@typescript-eslint", "jest"],
  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "plugin:promise/recommended",
    "standard",
    "plugin:prettier/recommended"
  ]
}
